mixin deck(id, name, parentId, isFirst = false)
  div.decklist
    div.card-header(id=`${id}-head`)
      h2.mb-0
        button.btn.btn-link.btn-block.text-left(
          type='button'
          data-toggle='collapse'
          data-target=`#${id}`
          aria-controls=`${id}`)
          = name
    div.card-body.collapse.px-0(
      id=`${id}`
      aria-labelledby=`#${id}-head`
      data-parent=`#${parentId}`
      )
      embed.decklist(src=`https://moxfield.com/embed/${id}`)